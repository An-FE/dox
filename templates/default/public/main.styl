
@import 'stylus/vendor'
@import 'stylus/mixins'
@import 'stylus/buttons'

// globals

light-gray = #e6e6e6
gray = darken-by(light-gray, 90%)

// basics

body
  font 13px/1.4 'helvetica neue', helvetica, arial, sans-serif
  padding 50px 120px

a
  color gray
  text-decoration none

h1
  margin 15px 0
  font-size 45px

.description
  margin-bottom 30px

pre
  margin 5px 15px
  padding 10px

// buttons

button
a.button
input[type=button]
  minimal-button()

// navigation

#files
  background light-gray
  fixed top 0 left -5px
  padding 10px 15px
  border-radius 5px
  transition opacity 2s, left 1s
  opacity 1
  &.hide
    opacity 0.2
    left -100px